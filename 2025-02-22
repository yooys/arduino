#include <Servo.h>

Servo myservo;

void setup() {
  Serial.begin(9600);
  myservo.attach(13);
}

void loop() {
  int val = analogRead(A0); 
  val = map(val,0,1023,0,179);
  myservo.write(val);
  delay(50);
}

